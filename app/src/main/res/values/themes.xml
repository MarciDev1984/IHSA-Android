<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHSAStable" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Custom Style For Toolbars-->
    <style name="toolbarCustom">
        <!--Container Attributes-->
        <item name="android:background">@color/red_main</item>
        <item name="android:elevation">8dp</item>

        <!--Title Attributes-->
        <item name="title">Custom Tool/ActionBar</item>
        <item name="subtitle">Cool Subtitle</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TA_ToolbarTitle</item>
        <item name="subtitleTextAppearance">@style/TA_ToolbarSubtitle</item>
    </style>

    <!--Custom Style For Buttons-->
    <style name="buttonCustom" parent="Widget.Material3.Button.ElevatedButton">
        <!--Text Attributes-->
        <!--<item name="android:text">Button</item>-->
        <item name="android:textColor">@color/red_main</item>
        <!--<item name="android:textAppearance">@style/TA_button</item>-->

        <!--Container Attributes-->
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/red_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearance">@style/smallShapeAppearance</item>
        <item name="elevation">50dp</item>
        <item name="rippleColor">@color/red_light</item>

        <!--Icon Attributes-->
        <item name="icon">@drawable/button_icon</item>
        <item name="iconTint">@color/red_main</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">4dp</item>
    </style>

    <!--Custom Style For TextFields-->
    <style name="textFieldCustom" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <!--Container Attributes-->
        <item name="strokeColor">@color/red_main</item>
        <item name="strokeWidth">2dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>

        <!--Leading Icon Attributes-->
        <item name="startIconDrawable">@drawable/text_field_icon</item>
        <item name="iconTint">@color/red_main</item>

        <!--Label Attributes-->
        <item name="android:hint">Enter Text Here</item>
        <item name="hintTextColor">@color/white</item>

        <!--Input Text Attributes-->
        <item name="android:text"></item>
        <item name="android:textAppearance">@style/TA_TextField</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Custom Typography-->
    <!--Button-->
    <style name="TA_button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--Toolbar Title-->
    <style name="TA_ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--Toolbar Subtitle-->
    <style name="TA_ToolbarSubtitle" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!--TextField Text-->
    <style name="TA_TextField" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_mono</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0</item>
    </style>



    <!--I cannot get this to function properly, the cornerFamily works, but I cant figure out how to tweak the corner size.-->
    <style name="smallShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
    </style>


    <!--Custom Style For Toolbar Menu-->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/red_main</item>
        <item name="android:popupElevation">20dp</item>
        <item name="textAppearanceLargePopupMenu">@font/roboto_mono</item>
    </style>
</resources>